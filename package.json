{
  "name": "saaba-backend",
  "description": "saaba backend",
  "author": "musakui",
  "license": "MIT",
  "version": "0.0.1",
  "private": "true",
  "type": "module",
  "main": "src/index.js",
  "bin": "dist/bundle.js",
  "scripts": {
    "docker:dev": "npm run build && ./scripts/docker-dev.sh",
    "docker:deploy": "npm run build && ./scripts/docker-deploy.sh",
    "build": "rollup -c && pkg .",
    "start": "nodemon -r dotenv/config src/index.js"
  },
  "pkg": {
    "outputPath": "dist",
    "targets": [
      "node14-linux-x64"
    ]
  },
  "dependencies": {
    "ws": "^7.5.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.9",
    "pkg": "^5.3.0",
    "rollup": "^2.52.8",
    "rollup-plugin-terser": "^7.0.2"
  }
}
